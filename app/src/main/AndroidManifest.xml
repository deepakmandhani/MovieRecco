<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.movierecco">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="MovieReccoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="com.project.services.ExampleService"
            android:exported="false"/>

        <service android:name="com.project.services.ExampleIntentService"
                 android:exported="false"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FindMovieByQueryTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".views.activity.GenreListActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/FindMovieByQueryTheme"/>

        <activity android:name=".views.activity.MovieListActivity"
                  android:screenOrientation="portrait"
            android:theme="@style/MovieListTheme"
            android:label="Movie List"/>

    </application>

</manifest>