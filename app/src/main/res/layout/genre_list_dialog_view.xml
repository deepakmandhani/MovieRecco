<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="280dp"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/select_genre_text"
        android:textColor="@color/blue"
        android:background="@color/gray.light"
        android:textSize="20dp"
        android:text="@string/select_genre"
        android:gravity="center"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/genre_recycler_view"
        android:layout_width="match_parent"
        android:layout_below="@id/select_genre_text"
        android:layout_height="250dp"/>

    <Button
        android:id="@+id/proceed_bv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/genre_recycler_view"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/proceed_text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"/>



</RelativeLayout>